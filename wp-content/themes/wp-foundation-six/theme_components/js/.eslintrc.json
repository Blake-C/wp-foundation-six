{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "globals": {
    "jQuery": true,
    "$": true,
    "Modernizr": true
  },
  "installedESLint": true,
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "root": true,
  "rules": {
    "indent": ["warn", "tab"],
    "linebreak-style": ["warn", "unix"],
    "quotes": ["warn", "single"],
    "semi": ["warn", "always"],
    "eol-last": 0,
    "no-console": 1,
    "no-shadow": 0,
    "no-underscore-dangle": 0,
    "no-unused-vars": 1,

    // React Rules
    "react/prefer-es6-class": 1,
    "react/prop-types": 1
  }
}