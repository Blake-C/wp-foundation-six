{
	"repositories": [
		{
			"type": "composer",
			"url": "https://wpackagist.org"
		}
	],
	"require": {
		"php": ">=7",
		"composer/installers": "^1.6",
		"johnpbloch/wordpress-core-installer": "^1.0",
		"johnpbloch/wordpress-core": "^5.1",
		"wpackagist-plugin/wordpress-seo" : "^10.0",
		"wpackagist-plugin/google-analytics-for-wordpress" : "^7.4",
		"wpackagist-plugin/redirection" : "^4.0",
		"wpackagist-plugin/regenerate-thumbnails" : "^3.1",
		"wpackagist-plugin/akismet" : "^4.1"
	},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "^0.4.4",
		"squizlabs/php_codesniffer": "3.3.2",
		"phpcompatibility/php-compatibility": "9.0.0",
		"wp-coding-standards/wpcs": "1.1.0"
	},
	"extra": {
		"wordpress-install-dir": "wp",
		"installer-paths": {
			"wp-content/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
			"wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
			"wp-content/themes/{$name}/": ["type:wordpress-theme"]
		}
	}
}
