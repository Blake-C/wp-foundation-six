{
	"repositories": [
		{
			"type": "composer",
			"url": "https://wpackagist.org"
		}
	],
	"require": {
		"php": ">=7",
		"composer/installers": "1.*",
		"johnpbloch/wordpress-core-installer": "^1.0",
		"johnpbloch/wordpress-core": "^4.8",
		"wpackagist-plugin/wordpress-seo" : "^8.3",
		"wpackagist-plugin/google-analytics-for-wordpress" : "^7.1",
		"wpackagist-plugin/redirection" : "^3.4",
		"wpackagist-plugin/regenerate-thumbnails" : "^3.0",
		"wpackagist-plugin/akismet" : "^4.0"
	},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "^0.4.4",
		"squizlabs/php_codesniffer": "3.3.0",
		"phpcompatibility/php-compatibility": "8.1.0",
		"wp-coding-standards/wpcs": "0.14.1"
	},
	"extra": {
		"wordpress-install-dir": "wp",
		"installer-paths": {
			"wp-content/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
			"wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
			"wp-content/themes/{$name}/": ["type:wordpress-theme"]
		}
	}
}
