{
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=5.6",
    "composer/installers": "1.*",
    "johnpbloch/wordpress-core-installer": "~0.2",
    "johnpbloch/wordpress-core": "4.7",
    "wpackagist-plugin/wordpress-seo" : "^4.0",
    "wpackagist-plugin/google-analytics-for-wordpress" : "^6.0",
    "wpackagist-plugin/redirection" : "^2.5",
    "wpackagist-plugin/regenerate-thumbnails" : "^2.2",
    "wpackagist-plugin/akismet" : "^3.2"
  },
  "extra": {
    "wordpress-install-dir": "wp",
    "installer-paths": {
      "wp-content/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
      "wp-content/themes/{$name}/": ["type:wordpress-theme"]
    }
  }
}
